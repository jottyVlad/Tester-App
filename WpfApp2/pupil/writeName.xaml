<Window x:Class="WpfApp2.pupil.writeName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.pupil"
        mc:Ignorable="d"
        Title="writeName" Height="450" Width="800">
    <Grid>
        <TextBlock Width="300" Height="20" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,149,0,0" TextWrapping="Wrap" Text="Введите имя, фамилию и класс" VerticalAlignment="Top"/>
        <TextBox Name="PupilName" TextAlignment="Center" HorizontalAlignment="Center" Height="23" Margin="0,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Button Content="Отправить результаты" HorizontalAlignment="Center" Margin="0,202,0,0" VerticalAlignment="Top" Width="300" Click="Button_Click"/>

    </Grid>
</Window>
